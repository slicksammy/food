<style>
  th{
    padding: 30px;
    text-decoration: underline;
  }

  td {
    padding: 30px;
    width: 30px;
  }

  .right {
    float: right;
  }
</style>


<div class="container">
  <p>Good morning Joel,</p>

  <p>This is an automated email. We have <%=@orders.count%> orders for today.</p>

  <% @orders.each do |order| %>
    <h3>Order #<%=order[:order_number] %></h3>
    <table>
      <tbody>
        <tr>
          <th>Type</th>
          <th>Quantity</th>
        </tr>
        <% order[:items].each do |item| %>
          <tr>
            <td>
              <%= item[:name] %>
            </td>
            <td class="right">
              <%= item[:amount] %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
