<script>
  $(document).ready( function() {
    $('#carousel_image').attr("src", product_urls[imageId]);
    setTimeout(function() {changeImage()}, 3000)
  });

  function changeImage() {
    if (imageId == product_urls.length - 1) {
      imageId = 0
    } else {
      imageId++
    }

    $('#carousel_image').attr("src", product_urls[imageId])
    setTimeout(function() {changeImage()}, 3000)
  }
</script>
