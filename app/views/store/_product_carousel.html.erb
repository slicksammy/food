</section>

<script>
  $(document).ready( function() {
    $('#carousel_image').attr("src", product_urls[imageId]);
    setTimeout(function() {changeImage()}, 3000)
  });

  function changeImage() {
    if (imageId == product_urls.length - 1) {
      imageId = 0
    } else {
      imageId++
    }

    var url = "url(" + product_urls[imageId] + ")"

    $('#product_carousel').css('background', url)
    $('#product_carousel').css('background-size', 'cover')
    $('#product_carousel').css('background-position', 'center')
    setTimeout(function() {changeImage()}, 3000)
  }
</script>
