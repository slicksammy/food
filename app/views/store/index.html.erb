    font-size: 50px;
    font-weight: bold;
    padding: 20px;
    /*padding-bottom: 40px;*/
    margin-top: 30px;
  }

  .learn-more {
    padding: 10px;
    font-size: 30px;
    margin-top: 20px;
    /*border: white 2px solid;*/
    background: black;
    border: none;
    color: white;
    font-weight: bold;
    border-radius: 3px;
    padding: 10px;
    font-weight: 600;
    letter-spacing: 2px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.10), 0 6px 20px rgba(0, 0, 0, 0.19),
    0 8px 17px rgba(0, 0, 0, 0.10), 0 8px 17px rgba(0, 0, 0, 0.20);
    /*border: solid 2px*/
  }

  .satisfaction-style {
    margin-left: 20px;
    display: inline-block;
  }

  @media (max-width: 992px) {
    .item-main {
      font-size: 20px;
      height: 220px;
      padding-bottom: 0px
    }

    .block {
      margin-bottom: inherit;
      font-size: 30px;
    }

    p {
      font-size: 20px;
    }

    .bigger {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .colcentered {
      min-height: 150px;
      float: none;
    }

    .image-style {
      width: 90%;
      height: 85%;
      margin-bottom: 20px;
    }

    .why-us {
      font-size: 35px;
    }
  }

  @media (max-width: 568px) {
    .item-main {
      font-size: 16px;
      height: 220px;
      padding-bottom: 0px
    }
  }

  @media (max-width: 743px) {
    .satisfaction-style {
      display: none;
    }

    #satisfaction {
      /*background-image: url(assets/satisfaction_guarantee_opaque.png);
