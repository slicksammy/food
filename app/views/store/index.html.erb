<style>
  .header {
    font-size: 40px;
    text-align: center ;
  }

  .max-width-1000 {
    max-width: 1000px;
  }

  .centered {
    text-align: center
  }

  .minus-margin-top {
    margin-top: -20px;
  }

  .colcentered {
    /*display: inline-block;*/
    float: none;
    margin: 0 auto;
    min-height: 300px;
  }

  .block {
    display: block;
    font-size: 50px;
    /*margin-bottom: 20px;*/
  }

  .item-main {
    font-size: 30px;
    background: rgb(178, 30, 30);
    margin: 20px 40px 20px 40px;
    padding: 20px 20px 20px 20px;
    height: 250px;
    display: inline-block ;
    color: #bababa;
  }

  .top-margin {
    margin-top: 30px;
  }

  .minus-top-margin {
    /*margin-top: -100px;*/
  }

  .underline {
    text-decoration: underline;
    font-size: 50px;
  }

  .image-style {
    width: 150px;
    display: inline;
    height: 30px;
    margin-top: -10px;
    margin-right: 8px;
  }

  p {
    font-size: 30px;
  }

  .about {
    width: 80%;
    margin: 0 auto;
    padding: 40px 0px 40px 0px;
  }

  .margin-bottom {
    margin-bottom: 50px;
  }

  .bigger {
    line-height: 200%;
    font-weight: bold;
  }

  .main-section {
    background: url(assets/background.png) no-repeat;
    background-size: cover;
    background-position: center center;
    padding: 20px 0px 20px 0px;
  }

  #store {
    background: #eaf0e9;
  }

  .why-us {
    font-size: 60px;
    font-weight: bold;
    padding: 20px;
  }

  .learn-more {
    padding: 10px;
    font-size: 30px;
    margin-top: 20px;
    border: white 2px solid;
    background: #2D6BEF;
    color: black;
    font-weight: bold;
  }

  @media (max-width: 992px) {
    .item-main {
      font-size: 20px;
      height: 220px;
      padding-bottom: 0px
    }

    .block {
      margin-bottom: inherit;
      font-size: 30px;
    }

    p {
      font-size: 20px;
    }

    .bigger {
      font-size: 24px;
      font-weight: bold;
    }

    .colcentered {
      min-height: 150px;
      float: none;
    }
  }

</style>


