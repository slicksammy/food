  }

  .top-margin {
    margin-top: 30px;
  }

  .minus-top-margin {
    /*margin-top: -100px;*/
  }

  .underline {
    text-decoration: underline;
    font-size: 50px;
  }

  .image-style {
    width: 500px;
    display: block;
    height: 135px;
    margin-top: -10px;
    /*margin-right: 8px;*/
    margin: 0 auto;
    margin-bottom: 50px;
  }

  p {
    font-size: 30px;
  }

  .about {
    width: 80%;
    margin: 0 auto;
    padding: 40px 0px 40px 0px;
  }

  .margin-bottom {
    margin-bottom: 30px;
  }

  .bigger {
    line-height: 120%;
    /*font-weight: bold;*/
    font-size: 50px;
    font-family: 'Germania One', cursive;
    margin-bottom: 50px;
  }

  .main-section {
    background: url(assets/background.png) no-repeat;
    background-size: cover;
    background-position: center center;
    padding: 20px 0px 40px 0px;
  }

  #satisfaction {
    background: #eaf0e9;
    /*padding-top: 20px;*/
    padding-bottom: 50px;
    font-size: 20px;
