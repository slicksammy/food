<script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>

<script>
  $(document).ready( function() {
    if (Cookies.get('modalseen') != 'true') {
      setTimeout(function() {$('#content').css("opacity", ".4"), $('#promo-modal').show()}, 10000); 
    }
  });
</script>


<style>
  #promo-modal {
    z-index: 9999;
    background: #232323;
    position: fixed;
    left: 0;
    right: 0;
    margin: 0 auto;
    top: 30%;
    /*display: none;*/
    opacity: 1;
    /*border: 5px solid;*/
    width: 300px;
    /*height: 275px;*/
    /*min-height: 300px;*/
    text-align: center;
    display: none;
    border-radius: 3px;
    color: white;

  }

  #modal-close {
    float: right;
    top: 0;
    background: white;
    display:block;
    color: black;
    border: 0;
    box-shadow:none;
    border-radius: 0px;
    font-size: 20px;
  }

  #promo-modal-background {
    background: grey;
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: .4;
    z-index: 9998;
  }

  #promo-email {
    width: 95%;
    height: 40px;
    margin-bottom: 20px;
    margin-top: 20px;
    color: black;
  }

  #div-modal-form {
    margin-top: 40px;
    padding: 10px;
    font-size: 24px;
    padding-bottom: 20px;
  }

  .modal-submit {
    width: 75%;
    font-size: 26px;
    color: white;
  }

  #modal-success {
    display: none;
    padding: 20px 20px 20px 20px;
  }

  #modal-success img {
    width: 30%;
    height: 30%;
  }
</style>

<div id="promo-modal" class="layer-shadow5">
  <button id="modal-close">X</button>

  <div id="div-modal-form">
    <p>Save on your first order today!</p>
    <form id="modal-form" method="POST" action="/getpromotion">
      <input id="promo-email" type="email" required="true" name="email" placeholder="Enter your email">
      <button type="submit" class="btn shop-background modal-submit" >Get My Offer</button>
    </form>
  </div>
  

  <div id="modal-success">
    <span><img src="assets/greencheckmark.png"></span>
    <p>Please check your email for your special offer</p>
  </div>
</div>

<script>
  $('#modal-close').click( function() {
    $('#promo-modal').hide()
    $('#content').css("opacity", "1")
    Cookies.set('modalseen', true , { expires: 3 });
  });

  $('#modal-form').submit(function(e) {
    e.preventDefault();
    $.ajax({
      method: 'POST',
      url: '/getpromotion',
      data: { email: $('#promo-email').val()}
    });
    $('#div-modal-form').hide()
    $('#modal-close').hide()
    $('#modal-success').show()
    setTimeout(function() {$('#promo-modal').css("display", "none"), $('#content').css("opacity", "1")}, 2000);
    Cookies.set('modalseen', true , { expires: 21 });
    // return false
  })
</script>
