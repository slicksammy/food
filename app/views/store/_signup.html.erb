<style>
  input {
    width: 75%;
    font-size: 36px;
    max-width: 400px;
    text-align: center;
    border: 2px solid;
  }

  #signup-submit {
    display: block;
    margin: 0 auto;
    margin-top: 20px;
    width: 40%;
    height: 70px;
    max-width: 200px;
    min-width: 170px;
    font-size: 33px;
    color: white;
  }

  .signup-block {
    text-align: center;
    background: url('assets/skillet.jpg') no-repeat;
    background-size: cover;
    padding: 20px 20px;
    margin-top: 30px;
  }

  .signup-h2 {
    color: white;
    font-weight: bold;
    text-transform: capitalize;
    max-width: 800px;
    margin: 0 auto;
  }

  .margin-bottom-30 {
    margin-bottom: 30px;
  }

  #signup-form-success {
    display: none;
    padding: 20px 20px 20px 20px;
    margin: 0 auto;
    color:white;
  }

  #signup-form-success img {
    width: 200px;
    height: 200px;
  }

  .signup-sucess-h1 {
    font-size: 40px;
    font-weight: bold;
    text-transform: capitalize;
  }
</style>


<div class="signup-block">
  <div id="signup-form-block"/>
    <h1 class="signup-h2 margin-bottom-30">Learn how to cook the best steaks at home with tutorials and recipes</h1>
    <form id="signup-form">
      <input id="signup-email" placeholder="Your Email" class="margin-bottom-30" required="true"/>
      <button type="submit" id="signup-submit" class="shop-background margin-bottom-30">Sign Up!</button>
    </form>
  </div>
  <div id="signup-form-success">
    <h1 class="signup-sucess-h1 margin-bottom-30">You have been signed up!</h1>
    <span><img src="assets/greencheckmark.png"></span>
  </div>
</div>

<script>
  $('#signup-form').submit(function(e) {
    e.preventDefault();
    $.ajax({
      method: 'POST',
      url: '/getpromotion',
      data: { email: $('#signup-email').val()}
    });
    $('#signup-form-block').hide()
    $('#signup-form-success').show()
    Cookies.set('signup-seen', true , { expires: 21 });
    // return false
  })
</script>
